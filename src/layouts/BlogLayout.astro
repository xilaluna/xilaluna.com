---
import Layout from "./Layout.astro";
import Heading from "../components/Heading.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} activeNav="blog">
  <main class="mx-auto max-w-screen-sm space-y-10 px-4 py-10 sm:px-0">
    <Heading title={frontmatter.title} description={frontmatter.description} />
    <a href={"/blog/"} class="inline-block">
      <p class="text-md text-skin-highlight hover:underline">
        ‚Üê Back to all posts
      </p>
    </a>
    <article
      class="prose prose-headings:text-skin-heading prose-p:text-skin-base prose-a:text-skin-highlight hover:prose-a:text-skin-highlight-hover"
    >
      <slot />
    </article>
  </main>
</Layout>
